
{% extends "base.html.twig" %}
{% block title %} {{ parent() }}Connexion{% endblock %}
{% block contenu %}

{% if form.valide is defined %}
{% if form.valide == true %}
<h1>Inscription réussie</h1>
<h1>Voici votre identifiant : {{form.email}}</h1>
{% if form.role == 1 %}
<h1>Vous êtes administrateur du site</h1>
{% else %}
<h1>Vous êtes un client du site </h1>
{% endif %}
{% else %}
<h1>Echec de l'inscription</h1>
<h1>Erreur : {{form.message}}</h1>
<h1><a href="index.php?page=inscrire">Retourner sur la page d'inscription</a></h1>
{% endif %}
{% else %}
 <div class="container">
        <div class="login-card">
            <div class="card-header">
                <div class="icon-circle">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"/><polyline points="10 17 15 12 10 7"/><line x1="15" y1="12" x2="3" y2="12"/></svg>
                </div>
                <h1>Bienvenue à la Velvet Room</h1>
                <p class="subtitle">Connectez-vous pour accéder à votre collection Persona</p>
            </div>

            <form class="login-form">
                <div class="form-group">
                    <label for="email">Email</label>
                    <div class="input-icon">
                        <input type="email" id="email" placeholder="joker@phantom-thieves.com">
                        <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
                    </div>
                </div>

                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <div class="input-icon">
                        <input type="password" id="password" placeholder="••••••••">
                        <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
                    </div>
                    <a href="#" class="forgot-password">Mot de passe oublié ?</a>
                </div>

                <button type="submit" class="submit-btn">Se connecter</button>

                <div class="separator">
                    <span>ou</span>
                </div>

                <p class="signup-link">
                    Pas encore de compte ? <a href="index.php?page=inscrire">Inscrivez-vous</a>
                </p>
            </form>
        </div>
    </div>
{% endif %}
{% endblock %}
